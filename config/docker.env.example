# Docker Environment Variables Example
# Copy this file to .env.docker for production use
# cp docker.env.example .env.docker

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=SoleMate
APP_URL=https://yourdomain.com
APP_ENV=production

# ===========================================
# Laravel Configuration
# ===========================================
# Generate with: php artisan key:generate
APP_KEY=base64:your-generated-app-key-here

# ===========================================
# Database Configuration
# ===========================================
DB_DATABASE=solemate_production
DB_USERNAME=solemate_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ===========================================
# Mail Configuration
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mail-username
MAIL_PASSWORD=your-mail-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Stripe Payment Gateway (PRODUCTION)
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# OAuth - Google (PRODUCTION)
# ===========================================
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# ===========================================
# OAuth - Facebook (PRODUCTION)
# ===========================================
# Get from: https://developers.facebook.com
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://yourdomain.com/api/auth/facebook/callback

# ===========================================
# AWS S3 Configuration (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# Backup Configuration
# ===========================================
# Cron schedule for automated backups
BACKUP_SCHEDULE="0 2 * * *"
# Number of days to keep backups
BACKUP_RETENTION_DAYS=30

# ===========================================
# Monitoring & Logging (Optional)
# ===========================================
# Sentry DSN for error tracking
SENTRY_LARAVEL_DSN=

# ===========================================
# Performance Configuration
# ===========================================
# OPcache is enabled by default in production
# Redis is used for cache, session, and queue

# ===========================================
# Security Notes
# ===========================================
# 1. NEVER commit this file with real credentials
# 2. Use strong passwords (mix of letters, numbers, symbols)
# 3. Change all default passwords
# 4. Keep Stripe keys secure
# 5. Use environment-specific OAuth apps
# 6. Enable 2FA on all service accounts

